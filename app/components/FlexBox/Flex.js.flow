// @flow

type $FlexDirection =
  & 'column'
  & 'row';

type $FlexAlign =
  | true
  | 'center'
  ;

declare type $FlexReactProps = {
  children: any,
  style?: Object,
};

declare type $FlexOwnProps = {|
  +alignY?: $FlexAlign,
  +around?: boolean,
  +between?: boolean,
  +center?: boolean,
  +column?: boolean,
  +direction?: $FlexDirection,
  +flexDirection?: $FlexDirection,
  +row?: boolean,
|};

declare type $FlexProps =
  & $FlexReactProps
  & $FlexOwnProps;
